{
  "name": "ts-starter",
  "version": "0.0.1",
  "description": "A typescript starter",
  "main": "dist/ts-setup.js",
  "bin": "./dist/ts-setup.js",
  "scripts": {
    "publish:git": "npm-run-all build git:commit patch git:push",
    "build": "npm-run-all clean build:ts",
    "build:ts": "tsc",
    "patch": "npm version patch",
    "clean": "rimraf ./dist",
    "git:commit": "git add -A && git commit --amend --no-edit",
    "git:push": "git push && git push --tags origin master",
    "setup": "./scripts/setup-ts-starter/setup-ts-starter.sh",
    "start": "nodemon",
    "setup:jest": "./scripts/setup-jest/setup-jest.sh",
    "setup:express": "./scripts/setup-express/setup-express.sh",
    "reset": "./scripts/reset/reset.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lagerone/ts-starter.git"
  },
  "keywords": [
    "typescript",
    "starter",
    "boilerplate"
  ],
  "author": "Daniel Lager <daniel.lager@gmail.com> (https://github.com/lagerone)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagerone/ts-starter/issues"
  },
  "homepage": "https://github.com/lagerone/ts-starter#readme",
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/shelljs": "^0.8.0",
    "colors": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/node": "^10.5.2",
    "dotenv": "^6.0.0",
    "eslint": "^5.1.0",
    "nodemon": "^1.18.3",
    "shelljs": "^0.8.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0"
  }
}
